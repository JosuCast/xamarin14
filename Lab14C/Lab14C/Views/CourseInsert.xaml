<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab14C.Views.CourseInsert">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre"/>
            <Entry Placeholder="Ingresa nombre" x:Name="txtName" HorizontalOptions="FillAndExpand"/>
            <Label Text="Descripción"/>
            <Entry Placeholder="Ingresa descripcion" x:Name="txtDescription" HorizontalOptions="FillAndExpand"/>
            <Label Text="Credito"/>
            <Entry Placeholder="Ingresa crédito" x:Name="txtCredit" HorizontalOptions="FillAndExpand"/>
            <Label Text="Fecha de inicio"/>
            <Entry Placeholder="Ingresa fecha de inicio" x:Name="txtStartDate" HorizontalOptions="FillAndExpand"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Save" Clicked="Button_Clicked"/>

            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>